
@model CV_Project.Models.Info

<section id='portfolio' class='portfolio-section section'>

    <div class='portfolio-block section-block'>

        <div class='container'>

            <div class='row'>
                <div class='col-md-6 col-md-offset-3'>

                    <div class='section-header text-center'>

                        <h2 class='animate text-over-block'>Portfolio</h2>

                        <!--divider-->
                        <div class='divider-draft center'></div>
                        <!--/divider-->

                        <p>
                            Önceden Geliştirilen projelerin bir kısmını aşağıda görebilirsiniz
                        </p>

                    </div>

                </div>
            </div>


            <div id='portfolio-grid' class='portfolio-items'>

                @foreach (var portfolio in Model.Portfolios)
                {
                    <div class='item'>
                        <div class='inner'>

                            <img alt='symp' src='~/Content/img/portfolio/@portfolio.ImageUrl'>

                            <div class='caption'>

                                <div class='caption-inner'>

                                    <h4>@portfolio.Title</h4>

                                    <ul class='links'>

                                        <li>
                                            <a href='/Home/Detail/@portfolio.Id'>
                                                <i class='ion-ios-plus-empty'></i>
                                            </a>
                                        </li>

                                        <li>
                                            <a href='~/Content/img/portfolio/@portfolio.ImageUrl' class='image-link'>
                                                <i class='ion-ios-search'></i>
                                            </a>
                                        </li>

                                    </ul>

                                </div>


                            </div>

                        </div>
                    </div>
                }






            </div>

        </div>

    </div>

    @Html.Partial("_PartialFooter",Model)

</section>
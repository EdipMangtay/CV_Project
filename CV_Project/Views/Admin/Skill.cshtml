@using CV_Project.Models

@model List<Skill>



@{
    ViewBag.Title = "Skill";
}

<h2>Skill</h2>


<div class="content-wrapper">
    <div class="row ml-3 mr-3">
        <div class="col-3"></div>
        <div class="col-6 mt-5">

            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Skill Update</h3>
                </div>

                @foreach (var item in Model)
                {
                    <form action="/Admin/Skill" method="post">
                        <input type="hidden" name="Id" value="@item.Id" />
                        <div class="card-body mt-2">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Name</label>
                                <input type="text" name="name" value="@item.Name" class="form-control" placeholder="Name">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputEmail1">Range</label>
                                <input type="number" name="range" value="@item.Range" class="form-control" placeholder="Range">
                            </div>
                        </div>

                        <div class="card-footer" style="text-align:center">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </div>
                    </form>
                }


            </div>



        </div>
    </div>
</div>
